// Options for BigQuery's supported file formats
{{#frame fileExt=(lowercase (extname file.name))}}
{
  configuration.load: {
      // CSV
      {{#eq @fileExt '.csv'}}
        sourceFormat: CSV
        autodetect: True
      {{/eq}}

      // JSON
      {{#or (eq @fileExt '.js') (eq @fileExt '.json')}}
        sourceFormat: NEWLINE_DELIMITED_JSON
        autodetect: True
      {{/or}}

      // Avro
      {{#eq @fileExt '.avro'}}
        sourceFormat: AVRO
        useAvroLogicalTypes: True
      {{/eq}}

      // Parquet
      {{#eq @fileExt '.parquet'}}
        sourceFormat: PARQUET
      {{/eq}}

      // ORC
      {{#eq @fileExt '.orc'}}
        sourceFormat: ORC
      {{/eq}}
  }
}
{{/frame}}